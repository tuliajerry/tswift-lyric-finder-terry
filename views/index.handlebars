{{> header}}

<main>
  <h1>Welcome to the Taylor Swift Lyric Finder!</h1>
  
  <form action="/api/search" method="GET">
    <input type="text" name="song" placeholder="Enter song title..." required>
    <button type="submit">Search Lyrics</button>
  </form>

  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}

  {{#if song}}
    <h2>{{song.title}} by {{song.artist}}</h2>
    <p>{{lyrics}}</p>
  {{/if}}
</main>
